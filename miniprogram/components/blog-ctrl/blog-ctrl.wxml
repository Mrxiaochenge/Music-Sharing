<view class="ctrl">
 <view class="ctrl-item" bind:tap="onComment">
   <i class="iconfont icon-pinglun"></i>
   <text>评论</text>
   </view>
  <view class="ctrl-item share" >
  <button open-type="share" data-blogid="{{blogId}}" data-blog="{{blog}}" class="share-btn"
   hover-class="share-hover">
   <i class="iconfont icon-fenxiang_2"></i>
   <text>分享</text>
   </button>
    </view>
</view>
  <x-login modalShow="{{loginShow}}" bind:loginsuccess="onLoginsuccess"
  bind:loginfail="onLoginfail"></x-login>


  <x-bottom-modal modalShow="{{modalShow}}">
   <form slot="modal-content" report-submit="true" bind:submit="onSend">
     <textarea name="content" class="comment-content" placeholder="请输入评论..." 
     value="{{content}}" fixed="true" ></textarea>
     <button class="send" form-type="submit" >发送</button>
   </form>
  </x-bottom-modal>